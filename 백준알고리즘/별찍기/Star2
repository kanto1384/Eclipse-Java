import java.util.*;
/*
5
********* 
 ******* 
  ***** 
   *** 
    * 
    */
public class Star2 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int Star = sc.nextInt();
		int n=Star;
		for(int i=0;i<Star;i++)
		{

			for(int k=0;k<2*n-1;k++)
			{
				System.out.print("*");
			}
			System.out.println(" ");
			for(int j=0;j<i+1;j++)
			{
				System.out.print(" ");
			}

			n--;
		}
	}

}

